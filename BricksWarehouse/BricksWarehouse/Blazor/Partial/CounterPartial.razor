<div class="m-2 p-2 border">
    <button class="btn btn-danger" @onclick="@( () => Counter-- )">Уменьшить</button>
    <span class="p-2">Значение счетчика: @Counter</span>
    <button class="btn btn-danger" @onclick="@( () => Counter++ )">Увеличить</button>
</div>

@code {
    public int Counter { get; set; }
}
