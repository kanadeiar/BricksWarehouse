<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BricksWarehouse.Mobile.ViewModels"
             x:Class="BricksWarehouse.Mobile.Views.MainPage"
             Title="{Binding Title}"
             x:DataType="vm:MainPageViewModel"
             BindingContext="{Binding MainPageViewModel, Source={StaticResource Locator}}">

    <StackLayout>
        <Frame BackgroundColor="#dc3545" Padding="24" CornerRadius="0">
            <Label Text="{Binding Title}" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout Padding="10">
            <Label Text="Мобильное приложение" FontSize="Title" />
            <Label Text="Обзор общей итоговой информации по складу в обобщенном виде. Управление складом осуществляется этим мобильным приложением." FontSize="Default" />
            <Label Text="Количество товаров на складе" FontSize="Title" />
            <Label Text="Количество товаров каждого отдельного вида на складе в обобщенном виде" FontSize="Default" />

        </StackLayout>

        


    </StackLayout>

</ContentPage>
