<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BricksWarehouse.Mobile.Views.QRScanPage"
             Title="{Сканирование QR-кода}">
    
    <StackLayout Padding="10">
        <Label Text="Получение информации склада по QR коду" FontSize="Large" Margin="10"/>
        <Button Text="Сканировать QR код" BackgroundColor="#f31731" Padding="10" FontSize="Subtitle" HeightRequest="60" TextColor="White"
                Clicked="ButtonScan_Clicked"/>
        <Label Text="Функционал дальнейшей обработки разпознанных кодов не реализован" />
    </StackLayout>
</ContentPage>